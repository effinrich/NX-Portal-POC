{
  "configurations": [
    {
      "name": "Cloud Run: Run/Debug Locally",
      "type": "cloudcode.cloudrun",
      "request": "launch",
      "autoStop": false,
      "build": {
        "docker": {
          "path": "Dockerfile"
        }
      },
      "image": "${workspaceFolderBasename}",
      "service": {
        "name": "${workspaceFolderBasename}",
        "containerPort": 8080,
        "resources": {
          "limits": {
            "memory": "256Mi"
          }
        }
      },
      "target": {
        "minikube": {}
      },
      "watch": true
    }

