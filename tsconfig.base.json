{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "emitDeclarationOnly": true,
    "skipDefaultLibCheck": true,
    "types": ["node", "jest", "cypress"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@phc/portal/features": ["libs/portal/features/src/index.ts"],
      "@phc/shared-hooks": ["libs/shared/hooks/src/index.ts"],
      "@phc/shared-ui": ["libs/shared/ui/src/index.ts"],
      "@phc/shared-utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", "tmp"],
  "include": []
}
